@{	
	@model parrucchiera.viewmodels.serviziViewModels;
	ViewData["Title"] = "Servizi";
}
<h1>@ViewData["Title"]</h1>
@* <link rel="stylesheet" type="text/css" href="site.css"> *@
<div>
	<h1>QUESTI SONO I NOSTRI SERVIZI! WOW!</h1>

	<h2>Proponiamo differenti servizi, per occuparci della tua bellezza nella maniera più olistica possibile.</h2>
	


	<h2>Scegli il tuo servizio:</h2>
        <h1>Listino Prezzi Parrucchiera</h1>
        <table border="9">
		<thead>
                <table border="1" cellpadding="10" cellspacing="0" width="50%">
                    <tr>
                        <th>Servizio</th>
                        <th>Descrizione</th>
                        <th>Prezzo</th>
                    </tr>

			@foreach (var servizio in Model.servizi)
			{
            <tr>
                <th>@servizio.nome_servizio</th>
                <th>@servizio.descrizione_servizio</th>
                <th>@servizio.prezzo €</th>
            </tr>
            }
	</table>
</div>	